@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-8">
        <h2>My Task List</h2>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Task</th>
                    <th>Category</th>
                    <th>Date</th>

                </tr>
            </thead>
            <tbody>
                @if(Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <b class="text-center">No tasks found.</b>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-4">
        <div>  @Html.Partial("Create", new TaskModel())</div>
    </div>
</div>